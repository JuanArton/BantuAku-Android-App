<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffedd9"
    >

    <RelativeLayout
        android:id="@+id/RelLayout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#f78e57"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ProfileLogo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/bulatputih">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="105dp"
            android:fontFamily="@font/righteous"
            android:text="Profile"
            android:textColor="#fff"
            android:textSize="35sp">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelLayout"
        app:layout_constraintTop_toBottomOf="@+id/RelLayout">

        <ImageView
            android:id="@+id/sellerImage"
            android:src="@drawable/bulatputih"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:background="#fff"
            android:layout_marginBottom="15dp"
            android:padding="5dp">
        </ImageView>

        <RelativeLayout
            android:id="@+id/sellerName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/sellerImage"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="#fff">
            <TextView
                android:id="@+id/namaSeller"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Test"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:textSize="20sp"
                android:fontFamily="@font/righteous">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/skill"
            android:layout_width="match_parent"
            android:layout_height= "40dp"
            android:layout_below="@+id/sellerName"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="#fff"
            android:padding="8dp">

            <TextView
                android:id="@+id/head0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skill"
                android:justificationMode="inter_word"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:fontFamily="@font/righteous">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="#000"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="80dp"
                android:fontFamily="@font/righteous">
            </TextView>

            <TextView
                android:id="@+id/skilText"
                android:layout_marginLeft="95dp"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="Test"
                android:justificationMode="inter_word"
                android:textColor="#000000"
                android:textSize="12sp"
                android:fontFamily="@font/righteous">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/deskripsi"
            android:layout_width="match_parent"
            android:layout_height= "wrap_content"
            android:layout_below="@+id/skill"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="#fff"
            android:padding="8dp">

            <TextView
                android:id="@+id/head1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:justificationMode="inter_word"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/righteous">
            </TextView>

            <TextView
                android:id="@+id/desc"
                android:layout_below="@+id/head1"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="Test"
                android:justificationMode="inter_word"
                android:textColor="#000000"
                android:textSize="12sp"
                android:fontFamily="@font/righteous">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height= "wrap_content"
            android:layout_below="@+id/deskripsi"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="#fff"
            android:padding="8dp">

            <TextView
                android:id="@+id/Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:justificationMode="inter_word"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/righteous">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="12sp"
                android:textColor="#000"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/righteous">
            </TextView>

            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/righteous"
                android:justificationMode="inter_word"
                android:layout_marginLeft="95dp"
                android:text="Test"
                android:layout_marginTop="4dp"
                android:textColor="#000000"
                android:textSize="12sp">
            </TextView>

            <TextView
                android:id="@+id/whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Email"
                android:text="Whatsapp"
                android:justificationMode="inter_word"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_marginBottom="22dp"
                android:fontFamily="@font/righteous">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="#000"
                android:textSize="12sp"
                android:layout_marginTop="-1dp"
                android:layout_marginLeft="80dp"
                android:layout_below="@+id/Email"
                android:fontFamily="@font/righteous">
            </TextView>

            <TextView
                android:id="@+id/waNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/righteous"
                android:justificationMode="inter_word"
                android:layout_marginLeft="95dp"
                android:layout_below="@+id/Email"
                android:text="Test"
                android:textColor="#000000"
                android:textSize="12sp">
            </TextView>

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/whatsapp"
                android:text="Handphone"
                android:justificationMode="inter_word"
                android:textColor="#000000"
                android:textSize="12sp"
                android:fontFamily="@font/righteous">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="#000"
                android:textSize="12sp"
                android:layout_marginTop="-2dp"
                android:layout_marginLeft="80dp"
                android:layout_below="@+id/whatsapp"
                android:fontFamily="@font/righteous"
                android:paddingBottom="2dp">
            </TextView>

            <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/righteous"
                android:justificationMode="inter_word"
                android:layout_marginLeft="95dp"
                android:layout_below="@+id/whatsapp"
                android:text="Test"
                android:textColor="#000000"
                android:textSize="12sp">
            </TextView>

            <Button
                android:id="@+id/emailButt"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:text="Kirim Email"
                android:fontFamily="@font/righteous"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:background="#00aeef"
                android:textColor="#fff">
            </Button>

            <Button
                android:id="@+id/waButt"
                android:layout_below="@+id/emailButt"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text="Chat"
                android:fontFamily="@font/righteous"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:background="#00aeef"
                android:textColor="#fff">
            </Button>

            <Button
                android:id="@+id/phoneButt"
                android:layout_below="@+id/waButt"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text="Hubungi"
                android:fontFamily="@font/righteous"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:background="#00aeef"
                android:textColor="#fff">
            </Button>

        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>